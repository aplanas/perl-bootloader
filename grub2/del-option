#! /usr/bin/perl

# usage: del-option OPTION
#
# Delete default boot option.
#
# OPTION is either of the form 'key=value' or 'key="value"' or just 'key'.

use strict;

my $file = "/etc/default/grub";

my $opt = shift;

$opt =~ s/=("?).*//;

exit 1 if $opt eq "";

open my $f, $file or die "$file: $!\n";
my @lines = (<$f>);
close $f;

my $changed = 0;

for (@lines) {
  if(/^(GRUB_CMDLINE_LINUX_DEFAULT)=(.*)/) {
    $changed = 1;
    my $key = $1;
    my $val = $2;

    $val =~ s/(^"\s*|\s*"\s*$)//g;

    $val =~ s/(^|\s)$opt=(\\"[^"]*\\"\s*)/ / or
    $val =~ s/(^|\s)$opt((\s|$)|(=\S*\s*))/ /;

    $val =~ s/^\s+|\s+$//g;

    $_ = "$key=\"$val\"\n";
  }
}

exit 0 unless $changed;

my $f;

if(!(
  open $f, ">$file.pblnew" and
  print $f @lines and
  close $f and
  rename "$file.pblnew", $file
)) {
  unlink "$file.pblnew";
  die "$file: failed to update config file\n"
}

